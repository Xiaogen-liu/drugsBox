<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/user_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/user_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="User&apos;s message" />

        <TextView
            android:id="@+id/user_message"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="姓名：张三    糖尿病患者" />
        <DigitalClock 
            android:id="@+id/clock"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="20dp"
            
            
            />
        
        
        
        
    </LinearLayout>

    <TableLayout
        android:id="@+id/date_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_layout"
        android:layout_marginTop="40dp"
      
        android:stretchColumns="**" >

        <TableRow>

            <TextView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="星期" />

            <Button
                android:id="@+id/morning_button"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="早上"
                android:textSize="10dp" />

            <Button
                android:id="@+id/moon_button"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="中午"
                android:textSize="10dp" />

            <Button
                android:id="@+id/night_button"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="晚上"
                android:textSize="10dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="一" />

            <Button
                android:id="@+id/monday_morning"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="时间"
                android:textSize="10dp" />

            <Button
                android:id="@+id/monday_moon"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="时间"
                android:textSize="10dp" />

            <Button
                android:id="@+id/monday_night"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="时间"
                android:textSize="10dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="二" />

            <Button
                android:id="@+id/tuesday_morning"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="时间"
                android:textSize="10dp" />

            <Button
                android:id="@+id/tuesday_moon"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="时间"
                android:textSize="10dp" />

            <Button
                android:id="@+id/tuesday_night"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="时间"
                android:textSize="10dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="三" />

            <Button
                android:id="@+id/wensday_morning"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="时间"
                android:textSize="10dp" />

            <Button
                android:id="@+id/wensday_moon"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="时间"
                android:textSize="10dp" />

            <Button
                android:id="@+id/wensday_night"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="时间"
                android:textSize="10dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="四" />

            <Button
                android:id="@+id/thursday_morning"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="时间"
                android:textSize="10dp" />

            <Button
                android:id="@+id/thursday_moon"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="时间"
                android:textSize="10dp" />

            <Button
                android:id="@+id/thursday_night"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="时间"
                android:textSize="10dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="五" />

            <Button
                android:id="@+id/friday_morning"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="时间"
                android:textSize="10dp" />

            <Button
                android:id="@+id/friday_moon"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="时间"
                android:textSize="10dp" />

            <Button
                android:id="@+id/friday_night"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="时间"
                android:textSize="10dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="六" />

            <Button
                android:id="@+id/saturday_morning"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="时间"
                android:textSize="10dp" />

            <Button
                android:id="@+id/saturday_moon"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="时间"
                android:textSize="10dp" />

            <Button
                android:id="@+id/saturday_night"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="时间"
                android:textSize="10dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="日" />

            <Button
                android:id="@+id/sunday_morning"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="时间"
                android:textSize="10dp" />

            <Button
                android:id="@+id/sunday_moon"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="时间"
                android:textSize="10dp" />

            <Button
                android:id="@+id/sunday_night"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="时间"
                android:textSize="10dp" />
        </TableRow>
    </TableLayout>
    <LinearLayout 
        android:id="@+id/correct_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_layout"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        
        >
        <Button 
            android:id="@+id/correct_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="确认"
            android:background="#7FFF00"
            
            
            
            
            />
        <Button 
            android:id="@+id/cancel_button"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:background="#D2B48C"
            
            
            />
        
        
        
        
    </LinearLayout>
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    

</RelativeLayout>